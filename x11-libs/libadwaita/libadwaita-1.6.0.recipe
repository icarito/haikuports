SUMMARY="Building blocks for modern GNOME applications"
DESCRIPTION="Libadwaita is a GTK 4 library that provides widgets and APIs \
from the Adwaita design language, complementing GTK itself."
HOMEPAGE="https://gitlab.gnome.org/GNOME/libadwaita"
COPYRIGHT="GNOME Project"
LICENSE="GNU LGPL v2.1"
REVISION="1"

portVersion="1.6.0"
SOURCE_URI="https://gitlab.gnome.org/GNOME/libadwaita/-/archive/$portVersion/libadwaita-$portVersion.tar.bz2"
CHECKSUM_SHA256="990e15072dc4000e7cae6f8fd1773c7f41f20825557334172435ec4904b2a6cc"
SOURCE_DIR="libadwaita-$portVersion"

ARCHITECTURES="all !x86_gcc2"
SECONDARY_ARCHITECTURES="x86"

libVersion="1"

PROVIDES="
	libadwaita$secondaryArchSuffix = $portVersion
	lib:libadwaita_$libVersion$secondaryArchSuffix = $portVersion
	"

PROVIDES_devel="
	libadwaita${secondaryArchSuffix}_devel = $portVersion
	devel:libadwaita_$libVersion$secondaryArchSuffix = $portVersion
	"

REQUIRES="
	haiku$secondaryArchSuffix
	adwaita_icon_theme
	lib:libgtk_4$secondaryArchSuffix
	lib:libappstream$secondaryArchSuffix
	lib:libappstream_glib$secondaryArchSuffix
	lib:libgirepository_1.0$secondaryArchSuffix
	"

REQUIRES_devel="
	libadwaita$secondaryArchSuffix == $portVersion base
	devel:libgtk_4$secondaryArchSuffix
	devel:libappstream$secondaryArchSuffix
	devel:libappstream_glib$secondaryArchSuffix
	"

BUILD_REQUIRES="
	haiku${secondaryArchSuffix}_devel
	devel:libgtk_4$secondaryArchSuffix
	devel:libappstream_glib$secondaryArchSuffix
	devel:libappstream$secondaryArchSuffix
	gobject_introspection${secondaryArchSuffix}_devel
	cmd:g_ir_annotation_tool$commandSuffix
	cmd:g_ir_compiler$commandSuffix
	cmd:g_ir_generate$commandSuffix
	cmd:g_ir_inspect$commandSuffix
	cmd:g_ir_scanner$commandSuffix
	devel:libglib_2.0$secondaryArchSuffix
	lib:libgirepository_1.0$secondaryArchSuffix
	pango${secondaryArchSuffix}_devel
	harfbuzz${secondaryArchSuffix}_devel
	devel:libxmlb$secondaryArchSuffix
	"

BUILD_PREREQUIRES="
	cmd:g_ir_scanner
	cmd:gcc$secondaryArchSuffix
	cmd:meson
	cmd:ninja
	cmd:pkg_config$secondaryArchSuffix
	cmd:sassc
	cmd:msgfmt
	devel:libglib_2.0$secondaryArchSuffix
	lib:libgirepository_1.0$secondaryArchSuffix
	pango${secondaryArchSuffix}_devel
	harfbuzz${secondaryArchSuffix}_devel
	devel:libxmlb$secondaryArchSuffix
	"

#	export LD_LIBRARY_PATH="$sourceDir/Build/src:$LD_LIBRARY_PATH"
#	PKG_CONFIG_PATH="/packages/glib2-2.78.0-2/.self/develop/lib/pkgconfig:$PKG_CONFIG_PATH" \
#	GI_SCANNER_DEBUG="save-temps" \
#	C_INCLUDE_PATH="$sourceDir/Build/src:$C_INCLUDE_PATH" \
#	export PKG_CONFIG_PATH="$sourceDir/Build/meson-private:$PKG_CONFIG_PATH"
#	export LC_ALL=C
#	export LIBRARY_PATH="$sourceDir/Build/src:$LIBRARY_PATH"
#	export LD_LIBRARY_PATH="$sourceDir/Build/src:$LD_LIBRARY_PATH"
BUILD()
{
	#export PKG_CONFIG_PATH="/packages/glib2-2.78.0-2/.self/develop/lib/pkgconfig:/packages/gtk4-4.16.12-1/.self/develop/lib/pkgconfig:$PKG_CONFIG_PATH"
	#export C_INCLUDE_PATH="$sourceDir/Build/src:$C_INCLUDE_PATH"
	export LIBRARY_PATH="$sourceDir/Build/src:$LIBRARY_PATH"
	export LD_LIBRARY_PATH="$sourceDir/Build/src:$LD_LIBRARY_PATH"
	export GI_SCANNER_DEBUG="save-temps"
	export LC_ALL=C

	meson setup Build \
		--buildtype=release \
		--prefix="$prefix" \
		--libdir="$libDir" \
		--datadir="$dataDir" \
		--localedir="$dataDir/locale" \
		-Dintrospection=enabled \
		-Dtests=false \
		-Dexamples=true \
		-Dvapi=false

	(ninja -C Build || true) > "/$sourceDir/build.log" 2>&1
}

INSTALL()
{
	ninja install -C Build

	prepareInstalledDevelLibs libadwaita-$libVersion
	fixPkgconfig
	packageEntries devel $developDir
}
